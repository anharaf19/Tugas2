@model IEnumerable<Tugas2.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if(ViewData["pesan"]!= null)
{
    @Html.Raw(ViewData["pesan"])
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                <a class="btn btn-warning btn-sm" asp-action="Update"
                               asp-route-id="@item.ID">update</a> &nbsp; &nbsp;
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) &nbsp;*@
                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ID">Details</a>
               @* @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
               <a class="btn btn-danger btn-sm" asp-action="Delete"
                               asp-route-id="@item.ID">delete</a>
                @*@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
}
    </tbody>
</table>
